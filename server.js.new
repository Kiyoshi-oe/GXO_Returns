// Multer f√ºr File-Upload
const upload = multer({ 
  storage: multer.memoryStorage(),
  limits: { fileSize: config.upload.maxFileSize }
});

// Upload-Route f√ºr Excel-Import
app.post('/api/import/excel', upload.single('file'), async (req, res) => {
  try {
    const XLSX = require('xlsx');
    const db = getDb();
    
    if (!req.file) {
      return res.status(400).json({ ok: false, error: 'Keine Datei hochgeladen' });
    }
    
    const workbook = XLSX.read(req.file.buffer, { type: 'buffer' });
    const sheetName = workbook.SheetNames[0];
    const worksheet = workbook.Sheets[sheetName];
    const rows = XLSX.utils.sheet_to_json(worksheet);
    
    if (rows.length === 0) {
      return res.status(400).json({ ok: false, error: 'Keine Daten in der Datei' });
    }
    
    const now = new Date().toISOString();
    let successCount = 0;
    let errorCount = 0;
    const errorDetails = [];
    
    const stmt = db.prepare(`
      INSERT INTO inbound_simple (
        cw, aufgenommen_am, ignore_flag, area, stage, last_stage,
        carrier_name, land, ship_status, planned_carton, actual_carton,
        olpn, dn, shi, carrier_tracking_nr, customer_id, customer_name,
        asn_ra_no, kommentar, added_by, created_at, location_id
      ) VALUES (?, ?, 0, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)
    `);
    
    const transaction = db.transaction(() => {
      rows.forEach((row, rowIndex) => {
        try {
          const getValue = (key) => {
            const keys = [key, key.toLowerCase(), key.toUpperCase()];
            for (const k of keys) {
              if (row[k] !== undefined && row[k] !== null && row[k] !== '') {
                return String(row[k]).trim();
              }
            }
            return null;
          };
          
          stmt.run(
            getValue('cw'),
            getValue('aufgenommen_am') || now,
            getValue('area'),
            getValue('stage'),
            getValue('lastStage') || getValue('last_stage'),
            getValue('carrier_name') || getValue('carrierName'),
            getValue('land'),
            getValue('shipStatus') || getValue('ship_status'),
            getValue('planned_carton') || getValue('plannedCarton'),
            getValue('actual_carton') || getValue('actualCarton'),
            getValue('olpn'),
            getValue('dn'),
            getValue('shi'),
            getValue('carrier_tracking_nr') || getValue('carrierTrackingNr'),
            getValue('customer_id') || getValue('customerId'),
            getValue('customer_name') || getValue('customerName'),
            getValue('asn_ra_no') || getValue('asnRaNo'),
            getValue('kommentar'),
            'Import',
            now,
            null
          );
          
          successCount++;
        } catch (err) {
          errorCount++;
          errorDetails.push({ row: rowIndex + 2, message: err.message });
        }
      });
    });
    
    transaction();
    
    res.json({
      ok: true,
      total: rows.length,
      success: successCount,
      errors: errorCount,
      errorDetails: errorDetails.slice(0, 50)
    });
  } catch (err) {
    console.error("Fehler beim Import:", err);
    res.status(500).json({ ok: false, error: err.message });
  }
});

